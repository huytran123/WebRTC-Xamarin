<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="WebRTC.DemoApp.MainPage">
    <StackLayout>
        <!-- Place new controls here -->
        <Entry x:Name="RoomIdEntry"
               Placeholder="Please enter a 6 digit room id"/>
        <StackLayout Orientation="Horizontal">
            <Button x:Name="StartCall"
                BackgroundColor="BlanchedAlmond"
                Text="Start Call"
                Clicked="StartCall_Clicked"/>
            <Button x:Name="JoinCall"
                    BackgroundColor="Gainsboro"
                    Text="JoinCall"
                    Clicked="JoinCall_Clicked"/>
        </StackLayout>

    </StackLayout>
</ContentPage>